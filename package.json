    "description": "Create independent scrollable areas in the terminal.",
    "main": "build/dist/index.js",
    "types": "build/dist/index.d.ts",
    "files": [
        "build/dist/**/*"
    ],
    "scripts": {
        "build": "tsc",
        "pretest": "tsc -p tests",
