{
    "compilerOptions": {
        "target": "es2016",
        "module": "CommonJS",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,

        "rootDir": "./src",
        "outDir": "build/dist",
        "declaration": true,
        "sourceMap": true
    },
    "include": ["src/**/*"]
}
